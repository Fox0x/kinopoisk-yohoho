{
    "extends": [
        "react-app",
        "react-app/jest"
    ],

    "rules": {
        "no-console": "warn",
        "prefer-const": "warn",
        "max-len": ["warn", { "code": 120 }],
        "comma-dangle": ["warn", "only-multiline"],
        "quotes": ["warn", "single"],
        "jsx-quotes": ["warn", "prefer-double"],
        "semi": ["warn", "always"],
        "import/order": ["warn",
            { "groups": ["builtin", "external", "internal", "parent", "sibling", "index"],
            "newlines-between": "always" }]
                }
}